@model Blog
@{
    Layout = "_DashBoard";
}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Adding Blog</span>
        </div>

        <div>
            <form method="post" asp-action="EditBlog" class="row">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Blog Title</label>
                    <input type="text" class="form-control"
                           asp-for="Title"
                           value="@Model.Title"
                           placeholder="" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                           

                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Blog Description</label>
                    <textarea type="text"
                              asp-for="Description"
                              class="form-control"
                              placeholder="">
                           @Model.Description
                          </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="profit" class="form-label">Profit</label>
                    <input type="number"
                           asp-for="profit"
                           class="form-control"
                           value="@Model.profit"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-12 ">
                    <div class="form-check">
                        <input asp-for="IsFree" class="form-check-input" type="checkbox" value="@Model.IsFree" id="" />
                        <label asp-for="IsFree" class="form-check-label" for=""> Free </label>
                    </div>


                <div class="mb-3 col-lg-6">
                    <label asp-for="TypeId" class="form-label">BlogType</label>
                    <select class="form-select "
                            asp-for="TypeId">
                        @{
                            if (Model.TypeId == 1)
                            {

                                <option >Select one</option>
                                    <option selected value="1">Romantic</option>
                                <option value="2"> comedy</option>
                            }
                            else if (Model.TypeId == 2)
                            {
                                <option>Select one</option>
                                <option value="1">Romantic</option>
                                <option selected value="2"> comedy</option>
                            }
                            else
                            {
                                <option selected>Select one</option>
                                <option value="1">Romantic</option>
                                <option value="2">comedy</option>
                            }
                        }
                     
                    </select>
                    <span asp-validation-for="TypeId" class="text-danger"></span>
                </div>



                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>