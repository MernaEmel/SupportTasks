@model IEnumerable<Blog>
@{
    Layout="_DashBoard";
}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">All Bloges</span>
        </div>
    </div>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td class="table-light">Id</td>
                    <td class="table-light">Title</td>
                    <td class="table-light">Description</td>
                    <td class="table-light">Type</td>
                    <td class="table-light">Operation</td>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Type.Name</td>


                        <td>


                            <a class="btn btn-success" role="button" asp-action="EditBlog" asp-route-Id="@item.Id">
                                <span class="material-symbols-outlined">
                                    Edit
                                </span>
                            </a>
                                <a class="btn btn-danger" asp-action="DeleteBlog" asp-route-Id="@item.Id" role="button">
                                <span class="material-symbols-outlined">
                                    Delete
                                </span>
                            </a>
                        </td>

                    </tr>
                }
                

            </tbody>
        </table>

    </div>




</div>
